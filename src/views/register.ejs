<%- include('partials/header') %>

  <div class="w-full  relative">
    <img class="absolute z-10 top-0 left-0 w-full h-screen" src="/images/bg.jpg" alt="BG">
    <div class="absolute z-20 top-0 left-0 w-full h-screen bg-black/70"></div>
    <div class="bg-black/90 absolute left-0 top-0 w-full h-[90px] z-30">
      <nav class="max-w-[1300px] h-[90px] mx-auto px-4 flex justify-between items-center text-white">
        <a href="/" class="flex">
          <p class="text-2xl">alta<span class="text-3xl text-red-500">GAMA</span>cars</p>      
        </a>    
        <div>
          <a class='text-xl font-bold hover:text-gray-600' href="/login">LOGIN</a>
        </div>
      </nav>
    </div>    

    <div class="absolute top-[90px] left-0 right-0 max-w-[55%] bg-white mx-auto py-8 px-4 mt-20 z-30 bg-opacity-40 backdrop-blur-sm rounded-lg drop-shadow-lg">
      <div class="w-full text-center">
        <p class="text-4xl text-white">REGISTER USER</p>
      </div>
      
      <div class="w-full mx-auto text-2xl font-bold pt-2">
        <% if (messages.error) { %>
        <p class="text-center text-red-800"> <%= messages.error %>  </p>
        <% } %>
      </div>

      <form action="/register" method="POST" enctype="multipart/form-data" class="mx-auto flex items-center justify-between">
        <div class="py-8 w-[30%] h-[300px] flex flex-col justify-around items-center">
          <div class="h-[170px] w-[170px] rounded-full bg-blue-500 overflow-hidden relative flex items-center justify-center">
            <img class="absolute left-0 top-0 w-full h-full object-cover" id="chosen_image">
            <svg id="spinner" class="hidden absolute w-[35px] h-[35px] animate-spin" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><path d="M96 256c0-26.5-21.5-48-48-48S0 229.5 0 256s21.5 48 48 48S96 282.5 96 256zM108.9 60.89c-26.5 0-48.01 21.49-48.01 47.99S82.39 156.9 108.9 156.9s47.99-21.51 47.99-48.01S135.4 60.89 108.9 60.89zM108.9 355.1c-26.5 0-48.01 21.51-48.01 48.01S82.39 451.1 108.9 451.1s47.99-21.49 47.99-47.99S135.4 355.1 108.9 355.1zM256 416c-26.5 0-48 21.5-48 48S229.5 512 256 512s48-21.5 48-48S282.5 416 256 416zM464 208C437.5 208 416 229.5 416 256s21.5 48 48 48S512 282.5 512 256S490.5 208 464 208zM403.1 355.1c-26.5 0-47.99 21.51-47.99 48.01S376.6 451.1 403.1 451.1s48.01-21.49 48.01-47.99S429.6 355.1 403.1 355.1zM256 0C229.5 0 208 21.5 208 48S229.5 96 256 96s48-21.5 48-48S282.5 0 256 0z"/></svg>
          </div>
          <input class='hidden flex-1 p-3 outline-none rounded-xl' type="file" name="foto" id="foto" accept="image/*" required>
          <label class='px-3 bg-white text-black hover:bg-black hover:text-white hover:shadow-lg duration-300 rounded-lg py-1 hover:cursor-pointer' for="foto">Seleccione Foto</label>          
        </div> 

        <div class="flex-1">
          <div class="flex items-center justify-between space-x-3">
            <div class="flex flex-col py-2 flex-1">
              <label class='font-bold text-white text-lg' for="email">Email</label>
              <input class='flex-1 p-3 outline-none rounded-xl' type="text" name="email" id="email" required>
            </div>
            <div class="flex flex-col py-2 flex-1">
              <label class='font-bold text-white text-lg' for="password">Password</label>
              <input class='flex-1 p-3 outline-none rounded-xl' type="password" name="password" id="password" required>
            </div>
          </div> 
          <div class="flex items-center justify-between space-x-3">
            <div class="flex flex-col py-2 flex-1">
              <label class='font-bold text-white text-xl' for="name">Nombre</label>
              <input class='flex-1 p-3 outline-none rounded-xl' type="text" name="name" id="name" required>
            </div>   
            <div class="flex flex-col py-2 flex-1">
              <label class='font-bold text-white text-xl' for="direccion">Dirección</label>
              <input class='flex-1 p-3 outline-none rounded-xl' type="text" name="direccion" id="direccion" required>
            </div> 
          </div> 
          <div class="flex items-center justify-between space-x-3">
            <div class="flex flex-col py-2 flex-1">
              <label class='font-bold text-white text-xl' for="telefono">Teléfono</label>
              <input class='flex-1 p-3 outline-none rounded-xl' type="text" name="telefono" id="telefono" required>
            </div> 
            <div class="flex flex-col py-2">
              <label class='font-bold text-white text-xl' for="edad">Edad</label>
              <input class='flex-1 p-3 outline-none rounded-xl' type="number" name="edad" id="edad" min="1" max="100" required>
            </div>             
          </div>
          <!-- <div class="flex flex-col py-2">
            <label class='font-bold text-white text-xl' for="foto">Foto</label>
            <input class='flex-1 p-3 outline-none rounded-xl' type="file" name="foto" id="foto">
          </div>  -->
          <div class="w-[50%] mx-auto pt-4">
            <input class='w-full bg-white text-black hover:bg-black hover:text-white hover:shadow-lg duration-300 rounded-lg py-2 hover:cursor-pointer' type="submit" value="Register">
          </div>                     
          <div class="w-full flex justify-center">
            <a href="/login" class="text-center text-lg text-black hover:text-white hover:cursor-pointer pt-3">Go to Login Page</a>                
          </div> 
        </div>
        
      </form>
    </div> 

  </div>
   <script src="register.js"></script>
</body>
</html>

