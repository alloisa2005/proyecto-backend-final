<%- include('partials/header') %>

  <nav class="max-w-[1300px] h-[90px] mx-auto px-4 flex justify-between items-center text-white">
    <div class="flex">      
      <p class="text-2xl">alta<span class="text-3xl text-red-500">GAMA</span>cars</p>
    </div>
    <p class="text-2xl font-bold text-white">Bienvenido/a <%= user.nombre  %></p>    
    <div class="flex items-center space-x-2">
      <a href="/api/carrito" class="relative">
        <img class='[25px] h-[25px]' src="./images/cart-icon.png" alt="Cart">
        <div class="p-3 absolute -right-2 -top-2 bg-blue-500/90 rounded-full  h-[17px] w-[17px] flex items-center justify-center">
          <p id="cart_quantity" class="text-white font-bold"></p>
        </div>
      </a>
      <a class='text-xl font-bold hover:text-gray-600' href="/logout">
        <div class='w-[45px] h-[45px] duration-300 flex justify-center items-center'>
          <img class='w-[25px] h-[25px]' src="./images/close-session.png" alt="Close">
        </div>
      </a>
      <% if (user.isAdmin === 'S') { %>        
        <a href="#">
          <img class='w-[50px] h-[50px] object-contain' src="./images/profile.png" alt="Profile">
        </a>
      <% } %>
    </div>
  </nav>

  <div class="max-w-[1300px] mx-auto mt-8 px-4 "> 
    <div class="w-full py-4 text-center">
      <p class="text-3xl font-bold uppercase pb-2 text-white">Nuestros productos</p>      
      <div class="w-full h-[2px] bg-red-200"></div>
    </div>   
    <div class="products_container w-full grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-3 mb-5">            
      <!-- Grilla con productos -->
      <% for( let i = 0; i < productos.length; i++ ) { %>        
        
        <div class="group border border-black overflow-hidden hover:cursor-pointer rounded-md  hover:scale-105 duration-200">  
          <p class="prod_id hidden id_product"> <%= productos[i]._id  %>  </p>
          <p class="prod_codigo hidden"> <%= productos[i].codigo  %> </p>
          <p class="prod_stock hidden"> <%= productos[i].stock  %> </p>          
          <img class="prod_img h-[250px] w-full object-cover grayscale group-hover:grayscale-0" src="<%= productos[i].foto %>"  alt="">          
          <div class="p-2">
            <p class="prod_nombre font-extrabold text-lg"> <%= productos[i].nombre %> </p>
            <p class="prod_desc font-bold text-white"> <%= productos[i].descripcion %> </p>
            <div class="flex justify-between items-center">
              <p class="prod_precio font-bold text-white"> Precio ($): <%= productos[i].precio %></p>                                   
              <img class="btn_add w-[24px] hover:cursor-pointer hover:bg-white duration-300 rounded-full" src="./images/add-icon.png" alt="Add Icon">
            </div>
          </div>
        </div>        

      <% } %>
    </div>    
  </div>

  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="./home.js"></script>
</body>
</html>